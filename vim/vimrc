"""""""""""""""""""""""""""""""" python breakpoint
let g:py_breakpoint_cmd = 'from pdb import set_trace; set_trace()      # XXX BREAKPOINT'

let s:venv = eval('$VIRTUAL_ENV')
if s:venv != ''

    let s:venv_python_version = system(s:venv . '/bin/python --version') " | cut -d" " -f2'))
    if s:venv_python_version >= '3'

python3 << EOF
import os, pkg_resources, site
import vim, os, sys

ws = pkg_resources.WorkingSet()
for entry in site.getsitepackages([os.environ.get('VIRTUAL_ENV')]):
    ws.add_entry(entry)

debuggers = [
    ('trepan3k', 'from trepan.api import debug; debug()'),
    ('pdbpp', 'from pdb import set_trace; set_trace()'),
]

for req, break_point_cmd in debuggers:
    dist = ws.find(pkg_resources.Requirement(req))
    if dist:
        vim.command(
            'let g:py_breakpoint_cmd = "{cmd}       # XXX BREAKPOINT"'.format(cmd=break_point_cmd)
        )
        break
EOF
    else
    endif
endif



fun! Py_breakpoint_operate(lnum) "{{{
    let line = getline(a:lnum)
    if strridx(line, g:py_breakpoint_cmd) != -1
        normal dd
    else
        let plnum = prevnonblank(a:lnum)
        call append(line('.')-1, repeat(' ', indent(plnum)).g:py_breakpoint_cmd)
        normal k
    endif
    " Save file without any events
    "call pymode#save()
endfunction "}}}


au! FileType python nnoremap <silent> <buffer> \b :call Py_breakpoint_operate(line('.'))<CR>
